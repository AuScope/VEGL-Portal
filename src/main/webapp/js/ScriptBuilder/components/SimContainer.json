{
  xtype: "form",
  id: "SimContainerForm",
  nclass: SimContainerNode,
  bodyStyle: "padding:5px;",
  labelWidth: 130,
  items: [{
    xtype: "fieldset",
    collapsible: false,
    title: "Main Settings",
    anchor: "100%",
    autoHeight: true,
    defaults: { anchor: "100%" },
    items: [{
      xtype: "textfield",
      name: "scriptName",
      value: "particle_script",
      fieldLabel: "Script Name",
      allowBlank: false,
      minLength: 3,
      maskRe: /[A-Za-z0-9._]+/
    }, {
      xtype: "combo",
      editable: false,
      forceSelection: true,
      mode: "local",
      triggerAction: "all",
      fieldLabel: "Particle Type",
      name: "particleType",
      store: ["NRotSphere", "RotSphere"],
      value: "NRotSphere"
    }, {
      xtype: "numberfield",
      name: "numTimesteps",
      value: "1000",
      fieldLabel: "Number of Timesteps",
      allowBlank: false,
      allowNegative: false,
      allowDecimals: false
    }, {
      xtype: "numberfield",
      name: "timeIncrement",
      value: "0.0001",
      anchor: "100%",
      fieldLabel: "Timestep Increment",
      decimalPrecision: 6,
      allowBlank: false
    }, {
      xtype: "radiogroup",
      fieldLabel: "Constrain to 2D",
      items: [
        { boxLabel: "No", name: "constrain2D", inputValue: 0, checked: true },
        { boxLabel: "Yes", name: "constrain2D", inputValue: 1 }
      ]
    }]
  }, {
    xtype: "fieldset",
    collapsible: true,
    title: "Spatial Extents",
    anchor: "100%",
    autoHeight: true,
    defaults: { anchor: "100%" },
    items: [{
      layout: "column",
      border: false,
      items: [{
        columnWidth: .5,
        layout: "form",
        border: false,
        items: [{
          xtype: "fieldset",
          collapsible: false,
          title: "Lower Left Front",
          autoHeight: true,
          anchor: "100%",
          labelWidth: 10,
          items: [{
            xtype: "numberfield",
            name: "llfX",
            value: "-10.0",
            anchor: "95%",
            fieldLabel: "X",
            decimalPrecision: 4,
            allowBlank: false
          }, {
            xtype: "numberfield",
            name: "llfY",
            value: "-10.0",
            anchor: "95%",
            fieldLabel: "Y",
            decimalPrecision: 4,
            allowBlank: false
          }, {
            xtype: "numberfield",
            name: "llfZ",
            value: "-10.0",
            anchor: "95%",
            fieldLabel: "Z",
            decimalPrecision: 4,
            allowBlank: false
          }]
        }]
      }, {
        columnWidth: .5,
        layout: "form",
        border: false,
        bodyStyle: "padding:0px 5px;",
        items: [{
          xtype: "fieldset",
          collapsible: false,
          title: "Upper Right Back",
          autoHeight: true,
          anchor: "100%",
          labelWidth: 10,
          items: [{
            xtype: "numberfield",
            name: "urbX",
            value: "10.0",
            anchor: "95%",
            fieldLabel: "X",
            decimalPrecision: 4,
            allowBlank: false
          }, {
            xtype: "numberfield",
            name: "urbY",
            value: "10.0",
            anchor: "95%",
            fieldLabel: "Y",
            decimalPrecision: 4,
            allowBlank: false
          }, {
            xtype: "numberfield",
            name: "urbZ",
            value: "10.0",
            anchor: "95%",
            fieldLabel: "Z",
            decimalPrecision: 4,
            allowBlank: false
          }]
        }]
      }]
    }]
  }, {
    xtype: "fieldset",
    collapsible: false,
    title: "Direction of Periodic Boundaries",
    autoHeight: true,
    anchor: "100%",
    layout: "fit",
    items: [{
      xtype: "radiogroup",
      hideLabel: true,
      columns: [ .4, .2, .2, .2 ],
      items: [{
        name: "periodic",
        boxLabel: "No periodic BCs",
        inputValue: "0",
        checked: true
      }, { name: "periodic", boxLabel: "X", inputValue: "1" },
         { name: "periodic", boxLabel: "Y", inputValue: "2" },
         { name: "periodic", boxLabel: "Z", inputValue: "3" }
      ]
    }]
  }, {
    xtype: "fieldset",
    collapsed: true,
    collapsible: true,
    title: "MPI Subdomain Decomposition",
    autoHeight: true,
    anchor: "100%",
    items: [{
      xtype: "numberfield",
      name: "subdivX",
      value: "1",
      anchor: "100%",
      fieldLabel: "Subdivisions in X",
      allowDecimals: false,
      allowNegative: false,
      allowBlank: false
    }, {
      xtype: "numberfield",
      name: "subdivY",
      value: "1",
      anchor: "100%",
      fieldLabel: "Subdivisions in Y",
      allowDecimals: false,
      allowNegative: false,
      allowBlank: false
    }, {
      xtype: "numberfield",
      name: "subdivZ",
      value: "1",
      anchor: "100%",
      fieldLabel: "Subdivisions in Z",
      allowDecimals: false,
      allowNegative: false,
      allowBlank: false
    }]
  }, {
    xtype: "fieldset",
    collapsed: true,
    collapsible: true,
    title: "Verlet List Contact Detection",
    autoHeight: true,
    anchor: "100%",
    items: [{
      xtype: "numberfield",
      name: "gridSpacing",
      value: "2.5",
      anchor: "100%",
      fieldLabel: "Linked Cell Grid Spacing",
      decimalPrecision: 6,
      allowNegative: false,
      allowBlank: false
    }, {
      xtype: "numberfield",
      name: "verletDist",
      value: "0.2",
      anchor: "100%",
      fieldLabel: "Verlet List Update Distance",
      decimalPrecision: 6,
      allowBlank: false
    }]
  }]
}

