    <beans:bean id="preAuthenticatedAuthenticationProvider" class="org.springframework.security.web.authentication.preauth.PreAuthenticatedAuthenticationProvider">
        <beans:property name="preAuthenticatedUserDetailsService">
            <beans:bean id="userDetailsServiceWrapper" class="org.springframework.security.core.userdetails.UserDetailsByNameServiceWrapper">
                <beans:property name="userDetailsService" ref="portalUserDetailsService"/>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <beans:bean id="preAuthenticatedProcessingFilter" class="org.auscope.portal.server.web.security.PreAuthenticatedProcessingFilter">
      <beans:property name="authenticationManager" ref="authenticationManager" />
   </beans:bean>

   <http auto-config='true' >
        <intercept-url pattern="/gridsubmit.html" access="ROLE_USER"/>
        <intercept-url pattern="/jobbuilder.html" access="ROLE_USER"/>
        <intercept-url pattern="/joblist.html" access="ROLE_USER"/>
        <intercept-url pattern="/admin.html" access="ROLE_ADMINISTRATOR"/>
        <intercept-url pattern="/*.diag" access="ROLE_ADMINISTRATOR"/>
        <intercept-url pattern="/login.html*" filters="none"/>
        <custom-filter ref="preAuthenticatedProcessingFilter" position="PRE_AUTH_FILTER" />
        <logout/>
        <openid-login login-page="/login.html">
            <attribute-exchange>
                <openid-attribute name="email" type="http://schema.openid.net/contact/email" required="true" count="1"/>
            </attribute-exchange>
        </openid-login>
    </http>

