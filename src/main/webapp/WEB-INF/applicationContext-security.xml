                <beans:bean class="org.auscope.portal.server.web.security.PortalUser">
                    <beans:constructor-arg name="name" value="http://joshvote.myopenid.com/" />
                    <beans:constructor-arg name="credentials" value="" />
                    <beans:constructor-arg name="grantedAuthorities">
                        <beans:list>
                            <beans:value>ROLE_USER</beans:value>
                            <beans:value>ROLE_ADMINISTRATOR</beans:value>
                            <beans:value>ROLE_UBC</beans:value>
                        </beans:list>
                    </beans:constructor-arg>
